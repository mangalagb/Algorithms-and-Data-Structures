package callcentre;

public class Fresher extends Employee{
	
	boolean free;
	
	public Fresher(String name) {
		this.name = name;
		free = true;
	}
	
	private void setFree(boolean value) {
		this.free = value;
	}
	
	public void getCall() throws InterruptedException {
		if(free) {
			System.out.print("\nFresher " + name + "recieving call\n");
			this.free = false;
			Thread.sleep(100); 
			System.out.print("Done recieving call\n");
			this.free = true;
		}
	}
	
	public static void main() throws InterruptedException {
		Fresher fresher = new Fresher("Alex");
		fresher.printEmployeeDetails();
		fresher.getCall();
	}
}